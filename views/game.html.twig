{% extends "layout.html.twig" %} {% block title %}{{ game.name }}{% endblock %} {% block content %}
<p>
    <h2>{{ game.name }}</h2>
    <p>{{ game.descriptionLong }}</p>
    <img src={{ game.image }}>
    <p>{{ game.price }}</p>
    <p>{{ game.year }}</p>
    <p>{{ game.type }}</p>
    <p>{{ game.number }}</p>

    {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('add_product_basket', {'id': game.id}) }}" class="btn btn-danger"><span class="glyphicon glyphicon-plus"></span> Ajouter au panier</a>
    {% else %}
                        <a href="{{ path('login') }} ">Log in</a> to add something to your basket.
    {% endif %}
    

</p>
{% endblock %}