{% extends "layout.html.twig" %} {% block title %}Panier{% endblock %} {% block content %}
<div class="jumbotron">
        <div class="row">
            <div class="col-md-6">
                <h2>Votre panier<br></h2>
                <div class="well">
                                <div class="form-group">
                                    <table class="table table-striped">
                                        <tbody>
                                            <tr>
                                                <th>Jeux</th> 
                                                <th>Quantité</th>
                                                <th>Prix(€)</th>
                                            </tr>
                {% for order in orders %}
                        <game>
                                    <tr>
                                            <th> <a class="game" href="{{ path('game', { 'id': order.game_id }) }}">{{order.game_name}}</a></th> 
                                            <th><p>{{ order.bas_quantity }}</p></th>
                                            <th>{{order.game_price*order.bas_quantity}}</th>
                                            <th> 
                                                
                                                <a href="{{ path('removeOneOrder', { 'id': order.basket_id }) }}" type="button" class="btn-danger btn-sm glyphicon glyphicon-minus-sign red"></a>
                                                <a href="{{ path('addOneOrder', { 'id': order.basket_id }) }}" type="button" class="btn-success btn-sm glyphicon glyphicon-plus-sign "></a>
                                                
                                                <a href="{{ path('deleteOrder', { 'id': order.basket_id }) }}" type="button" class="btn-danger btn-sm glyphicon glyphicon-remove-sign red"></a>
                                            </th>   
                                    </tr>
                            
                        </game>
                {% endfor %}
                                         </tbody>
                </table>
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                    {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}